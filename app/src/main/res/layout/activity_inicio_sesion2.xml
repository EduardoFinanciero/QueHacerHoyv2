<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion2">

    <LinearLayout
        android:layout_width="419dp"
        android:layout_height="742dp"
        android:background="#126C87"
        android:gravity="center|top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-2dp">

        <ImageView
            android:id="@+id/ImgLogo"
            android:layout_width="274dp"
            android:layout_height="188dp"
            app:srcCompat="@drawable/logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="49dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#2A2E4FF6"
            app:cardCornerRadius="15dp"
            app:cardElevation="2.5dp"
            app:cardMaxElevation="3dp">

            <TextView
                android:id="@+id/txtInformativo"
                android:layout_width="321dp"
                android:layout_height="64dp"
                android:layout_marginLeft="17dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:hint="Si ya eres usuario inicia sesion, sino que esperas para registarte."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="119dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/User"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Usuario"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <EditText
                    android:id="@+id/Pass"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ContraseÃ±a"
                    android:inputType="textPassword"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="265dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btnEntrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btnEntrar"
                    app:icon="@android:drawable/ic_menu_send" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="goToRegistro"
                    android:text="@string/btn_registrar"
                    app:icon="@android:drawable/ic_menu_add" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>